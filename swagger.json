{
  "swagger": "2.0",
  "info": {
    "title": "Quick Credit",
    "description": "Quick Credit is an online lending platform that provides short term soft loans to individuals.",
    "version": "1.0.0"
  },
  "host": "https://q-credit.herokuapp.com/",
  "basePath": "/api/v1/",
  "externalDocs": {
    "description": "Find out more about Quick Credit",
    "url": "https://ph3bian.github.io/quick-credit/ui"
  },

  "tags": [
    {
      "name": "Quick Credit",
      "description": "Everything about your Loans",
      "externalDocs": {
        "description": "Find out more",
        "url": "https://ph3bian.github.io/quick-credit/ui"
      }
    }
  ],
  "paths": {
    "/signup": {
      "post": {
        "tags": [
          "auth"
        ],
        "summary": "Create new user",
        "operationId": "createUser",
        "requestBody": {
          "description": "User information to create an account",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              }
            },
            "application/xml": {
              "schema": {
               "$ref": "#/components/schemas/User"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "User Sign Up Successful"
          },
           "400": {
            "description": "Required fields can not be empty",
            "content": {}
          }
        }
        
      }
    },
     "/signin": {
      "post": {
        "tags": [
          "auth"
        ],
        "summary": "User Sign In",
        "operationId": "userSignIn",
        "requestBody": {
          "description": "User sign",
          "content": {
            "application/json": {
              "schema": {
               "$ref": "#/components/schemas/User"
              }
            },
            "application/xml": {
              "schema": {
                "$ref": "#/components/schemas/User"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "User Sign In Successful"
          },
           "400": {
            "description": "Required fields can not be empty",
            "content": {}
          },
           "404": {
            "description": "User does not exist"
          }
        }
      }
    },
     "/loans": {
      "post": {
        "tags": [
          "loans"
        ],
        "summary": "User requests for loan",
        "operationId": "createLoan",
        "requestBody": {
          "description": "User apply for loans",
          "content": {
            "application/json": {
              "schema": {
               "$ref": "#/components/schemas/Loan"
              }
            },
            "application/xml": {
              "schema": {
                "$ref": "#/components/schemas/Loan"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
          "description": "Loan requested Successfully"
          },
           "400": {
            "description": "Required fields can not be empty",
            "content": {}
          },
           "404": {
            "description": "Invalid User details"
          }
        }
      },
      "get": {
        "tags": [
          "loans"
        ],
        "summary": "View all loan applications",
        "operationId": "getLoans",
       "parameters": [
          {
            "name": "status",
            "in":"query",
            "description": "Status values that need to be considered for filter",
            "required": true,
            "style": "form",
            "explode": true,
           "schema": {
              "type": "array",
              "items": {
                "type": "string",
                "default": "pending",
                "enum": [
                  "available",
                  "pending",
                  "rejected"
                ]
              }
            }
          }
        ],
        "responses": {
           "200": {
            "description": "Get loans successful "
          },
           "400": {
             "description":  "Invalid query parameters",
            "content": {}
          }
        }
      }
    },
    "/loans/:id": {
      "get": {
        "tags": [
          "loans"
        ],
        "summary": "Get specific loans",
        "description": "View loan with Id",
        "operationId": "getLoan",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Get loan by Id",
            "required": true,
            "style": "form",
            "explode": true,
            "schema": {
              "$ref": "#/components/schemas/Loan"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/xml": {
                "schema": {
                  "type": "object",
                  "items": {
                    "$ref": "#/components/schemas/Loan"
                  }
                }
              },
              "application/json": {
                "schema": {
                  "type": "object",
                  "items": {
                    "$ref": "#/components/schemas/Loan"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid Id value",
            "content": {}
          }
        }
      },
      "patch": {
        "tags": [
          "loans"
        ],
        "summary": "Update loans status",
        "description": "Update Loan status to either approved or rejected",
        "operationId": "patchLoan",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Approve loan by Id",
            "required": true,
            "style": "form",
            "explode": true,
            "schema": {
              "type": "array",
              "items": {
                "type": "string",
                "default":"pending",
                "enum": [
                  "approved",
                  "pending",
                  "rejected"
                ]
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/xml": {
                "schema": {
                  "type": "object",
                  "items": {
                    "$ref": "#/components/schemas/Loan"
                  }
                }
              },
              "application/json": {
                "schema": {
                  "type": "object",
                  "items": {
                    "$ref": "#/components/schemas/Loan"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid status"
          }
        }
      }
    },
    "/loans/:loanId/repayment": {
      "post": {
        "tags": [
          "loans"
        ],
        "summary": "Update loan repayment",
        "description": "Update loan, updating balance",
        "operationId": "updateRepayment",
        "parameters": [
          {
            "name": "loanId",
            "in": "path",
            "description": "Update repayment by loanId",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/Loan"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Loan"
                }
              }
            }
          },
          "400": {
            "description": "Invalid loanId value",
            "content": {}
          }
        }
      }
    },
    "/loans/:loanId/repayments": {
      "get": {
        "tags": [
          "loans"
        ],
        "summary": "Update loan repayment",
        "description": "Update loan, updating balance",
        "operationId": "updateRepayment",
        "parameters": [
          {
            "name": "loanId",
            "in": "path",
            "description": "View loan repayment history",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/Loan"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Loan"
                }
              }
            }
          },
          "400": {
            "description": "Invalid loanId value",
            "content": {}
          }
        }
      }
    },
    "/loans?status=approved&repaid=true": {
      "get": {
        "tags": [
          "loans"
        ],
        "summary": "Query loans by status or repaid",
        "description": "Multiple status or repaid values can be provided with comma separated strings",
        "operationId": "QueryLoansByStatusOrRepaid",
        "parameters": [
          {
            "name": ["status", "repaid"],
            "in": "query",
            "description": "Status and repaid values that need to be considered for filter",
            "required": true,
            "style": "form",
            "explode": true,
            "schema": {
              "type": "array",
              "items": {
                "type": "string",
                "default": "pending",
                "enum": [
                  "approved",
                  "pending",
                  "rejected"
                ]
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/xml": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Loan"
                  }
                }
              },
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Loan"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid status value",
            "content": {}
          }
        }
      
      }
    },
     "/user/:email/verify": {
      "patch": {
        "tags": [
          "user"
        ],
        "summary": "Update user status",
        "operationId": "patchUser",
        "parameters": [
          {
            "name": "email",
            "in": "path",
            "description": "Update user status by email ",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "400": {
            "description": "Invalid email supplied",
            "content": {}
          },
          "404": {
            "description": "User not found",
            "content": {}
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "firstname": {
            "type": "string"
          },
          "lastname": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "address": {
            "type": "string"
          },
          "bvn": {
            "type": "string"
          },
          "isAdmin": {
            "type": "boolean"
          }
        },
        "xml": {
          "name": "User"
        }
      },
       "Loan": {
    "type": "object",
    "required": [
      "amount",
      "tenor",
      "loanType",
      "accountNo",
      "userId"
    ],
    "properties": {
      "amount": {
        "type": "integer"
      },
      "tenor": {
        "type": "integer"
      },
      "loanType": {
        "type": "string"
      },
      "accountNo": {
        "type": "string"
      },
      "userId": {
        "type": "string"
      },
      "status": {
        "type": "string"
      },
      "repaid": {
        "type": "string"
      },
      "balance": {
        "type": "float"
      },
      "id": {
        "type": "integer"
      }
    },
    "xml": {
      "name": "Loan"
    }
  }, "Repayments": {
    "type": "object",
    "properties": {
      "id": {
        "type": "integer",
        "format": "int64"
      },
      "createdOn": {
        "type": "dateTime"
      },
      "loanId": {
        "type": "integer",
        "format": "int64"
      }, 
      "amount": {
        "type": "float"
      }
    },
    "xml": {
      "name": "Repayments"
    }
  }
    }
   
  }
}