{
  "swagger": "2.0",
  "info": {
    "name": "Quick Credit",
    "description": "Quick Credit is an online lending platform that provides short term soft loans to individuals.",
    "version": "1.0.0"
  },
  "host": "https://q-credit.herokuapp.com",
  "basePath": "/api/v1/",
  "schemes": [
    "http",
    "https"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/signup": {
      "post": {
        "tags": [
          "auth"
        ],
        "summary": "Create new user",
        "operationId": "addUser",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "User information to create an account",
            "required": true,
            "schema": {
              "$ref": "#/definitions/NewUser"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "User Sign Up Successful"
          },
          "400": {
            "description": "Required fields can not be empty"
          }
        }
      }
    },
    "/signin": {
      "post": {
        "tags": [
          "auth"
        ],
        "summary": "User sign in",
        "operationId": "userSignIn",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "User log in",
            "required": true,
            "schema": {
              "$ref": "#/definitions/UserSignIn"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "login successful"
          },
          "400": {
            "description": "Required fields can not be empty"
          },
          "404": {
            "description": "User does not exist"
          }
        }
      }
    },
    "/loans": {
      "post": {
        "tags": [
          "loans"
        ],
        "summary": "Request for loan",
        "operationId": "addLoan",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Loan information",
            "required": true,
            "schema": {
              "$ref": "#/definitions/NewLoan"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Loan requested Successfully"
          },
          "400": {
            "description": "Required fields can not be empty"
          }
        }
      }
    },
    "/loans": {
      "get": {
        "tags": [
          "loans"
        ],
        "summary": "View loan applications",
        "operationId": "getLoans",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Loan information",
            "required": true,
            "schema": {
              "$ref": "#/definitions/NewLoan"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Loan requested Successfully"
          },
          "400": {
            "description": "Required fields can not be empty"
          }
        }
      }
    }
  },
  "definitions": {
    "NewUser": {
      "type": "object",
      "required": [
        "firstName",
        "lastName",
        "email",
        "password",
        "address",
        "bvn"
      ],
      "properties": {
        "firstName": {
          "type": "string"
        },
        "lastName": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "address": {
          "type": "string"
        },
        "bvn": {
          "type": "string"
        }
      },
      "xml": {
        "name": "NewUser"
      }
    },
    "UserSignIn": {
      "type": "object",
      "required": [
        "email",
        "password"
      ],
      "properties": {
        "email": {
          "type": "string",
          "example":"joy@gmail.comr"
        },
        "password": {
          "type": "string"     
      },
      "xml": {
        "name": "UserSignIn"
      }
    }
  
  },
  "NewLoan": {
    "type": "object",
    "required": [
      "amount",
      "tenor",
      "loanType",
      "accountNo",
      "userId"
    ],
    "properties": {
      "amount": {
        "type": "number"
      },
      "tenor": {
        "type": "number"
      },
      "loanType": {
        "type": "string"
      },
      "accountNo": {
        "type": "string"
      },
      "userId": {
        "type": "string"
      }
    },
    "xml": {
      "name": "NewLoan"
    }
  }
}
}
